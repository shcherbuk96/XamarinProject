<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

  <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash</item>
  </style>
  
  <style name="PhotosSearchEditText">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginLeft">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginEnd">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginRight">@dimen/margin_padding_size_small</item>
  </style>
  
  <style name="PhotosMvxRecyclerView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_marginStart">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginLeft">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginEnd">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginRight">@dimen/margin_padding_size_small</item>
  </style>

  <style name="PhotosSearchButton">
    <item name="android:layout_width">@dimen/photos_search_btn_size</item>
    <item name="android:layout_height">@dimen/photos_search_btn_size</item>
    <item name="android:layout_marginEnd">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginRight">@dimen/margin_padding_size_small</item>
    <item name="android:background">@drawable/search_icon</item>
  </style>

  <style name="PhotosProgressBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginStart">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginLeft">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginEnd">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginRight">@dimen/margin_padding_size_small</item>
  </style>


  <style name="DescriptionPhotoImageView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/description_photo_image_view_height</item>
    <item name="android:layout_marginStart">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginLeft">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginTop">@dimen/margin_padding_size_small</item>
    <item name="android:scaleType">centerCrop</item>
  </style>
  
  <style name="DescriptionConstTextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginLeft">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginTop">@dimen/margin_padding_size_small</item>
    <item name="android:textSize">@dimen/description_text_view_size</item>
  </style>

  <style name="DescriptionTextView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginLeft">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginTop">@dimen/margin_padding_size_small</item>
    <item name="android:textSize">@dimen/description_text_view_size</item>
  </style>

  <style name="DescriptionOpenPageButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginLeft">@dimen/margin_padding_size_small</item>
    <item name="android:layout_marginTop">@dimen/margin_padding_size_small</item>
    <item name="android:background">@drawable/open_custom_btn</item>
  </style>
</resources>
